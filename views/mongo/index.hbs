<div class="content-wrapper">
  <section class="content-header">
      <div class="callout callout-info">
          <h4>{{ content.title }}</h4>

          <p>{{{ content.content }}}</p>
          <p>Implementation Example: <a href="{{ content.url_implementation }}">Here</a></p>
          <p>What's include on this implementation example: {{ content.title_implementation }}</p>
      </div>
  </section>

  <section class="content-header">
    <h1>Show List Data Using MongoDB</h1>
  </section>

  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">Customer</h3>

            <div class="box-tools pull-right">
                <a class="btn btn-box-tool btn-default" href="/mongo/new"><i class="fa fa-plus"></i> Add New</a>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <div class="table-responsive">
              <table class="table no-margin">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Address</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                  {{#each datas}}
                      <tr>
                          <td>{{name}}</td>
                          <td>{{email}}</td>
                          <td>{{address}}</td>
                          <td>
                            <a class='btn btn-xs btn-default' href='/mongo/edit/{{_id}}'>Update</a>
                            <a class="btn btn-xs btn-default" onclick="return confirm('Are you sure want to delete this data');" href="/mongo/delete/{{_id}}"><i class="fa fa-remove"></i> Destroy</a>
                          </td>
                      </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </section>
</div>