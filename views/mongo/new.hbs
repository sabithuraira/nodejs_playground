<div class="content-wrapper">

    <section class="content-header">
        <div class="callout callout-info">
            <h4>{{ content.title }}</h4>

            <p>{{{ content.content }}}</p>
            <p>Implementation Example: <a href="{{ content.url_implementation }}">Here</a></p>
            <p>What's include on this implementation example: {{ content.title_implementation }}</p>
        </div>
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Add New Data</h3>
                <div class="box-tools pull-right">
                    <a class="btn btn-box-tool" href="/mongo">List</a>
                </div>
            </div>
            <form role="form" method='POST'>
                <input type="hidden" id="_csrf" name="_csrf" value={{csrfToken}}>
                <div class="box-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Enter name here...">
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" placeholder="Enter email here...">
                    </div>

                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" name="address" placeholder="Enter address here...">
                    </div>
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </section>
</div>